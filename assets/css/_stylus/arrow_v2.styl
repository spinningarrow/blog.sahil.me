@import "mixins"
@import "colours/traffic-light-capsicum"
@import "type"
@import "mixins/fancy-list"
//@import "baseline"

// ====================================================================
// Basic styles
// ====================================================================

body
	background-color background_color
	color text_color
	font-family $bodyFont
	font-size $bodyFontSize
	line-height $baseLineHeight
	margin 8px auto
	max-width 600px
	padding 0 20px

h1, h2, h3, h4, h5, h6
	font-weight normal
	margin $baseLineHeight auto

p
	margin-bottom $baseLineHeight
	margin-top 0

a
	text-decoration none
	transition color 0.2s ease

	&:link, &:visited
		color accent_primary_color

		&:hover
			color accent_tertiary_color

.content-main a
	border-bottom 2px solid lighten(accent_secondary_color, 80%)

.content-main a[name]
	border-bottom 0

figure
	margin-bottom $baseLineHeight

.full-width img
	width 100%

em em
	font-style normal

strong, b
	font-weight normal
	font-variant small-caps
	text-transform lowercase

.acronym
	font-size 0.8em

.alert
	background-color lighten(accent_secondary_color, 97%)
	font-size 0.8em
	padding 0.5em

// ====================================================================
// Blog Header
// ====================================================================

.header-main
	margin-bottom $baseLineHeight
	position relative

.title-main
	background-color subtle_secondary_color
	border-bottom 1px solid subtle_primary_color
	display inline-block
	font-size 14px
	letter-spacing 2px
	line-height 1
	margin-bottom 0 // override baseline
	margin-right 1em
	padding 4px
	text-transform uppercase

	a:link, a:visited
		color text_color

.description-main
	color subtle_tertiary_color
	font-size 45px
	font-style italic
	position absolute
	top 10px
	z-index -1

// ====================================================================
// Navigation Links
// ====================================================================

.nav-main
	display inline-block
	font-size 16px
	font-style italic
	text-transform lowercase

	ul
		list-style none
		margin 0
		padding 0

	li
		display inline-block
		margin-left 1em

		&:first-child
			margin-left 0

// ====================================================================
// Footer
// ====================================================================

.footer-main
	font-size 13px
	letter-spacing 1px
	margin-top $baseLineHeight
	text-transform uppercase

	i
		text-transform none

	&:before
		color subtle_primary_color
		content '❄'
		font-size 28px
		vertical-align middle

// ====================================================================
// Home
// ====================================================================

.home-latest
	h2
		display none

	ul
		fancy-list()

		li
			margin-bottom $baseLineHeight

			> a
				border 0
				font-size 1.3em

	.title-post
		fancy-list-main()

	.meta-post
		fancy-list-meta(false)

	time
		margin-right 0.5em

// ====================================================================
// Archives
// ====================================================================

.page-archives
	ul
		fancy-list()

	.title-post
		fancy-list-main()

	.meta-post
		fancy-list-meta()

// ====================================================================
// Links
// ====================================================================

.page-links
	ul
		fancy-list()

	li
		a
			fancy-list-main()

		time
			fancy-list-meta()

// ====================================================================
// Post
// ====================================================================

article
	.header-post
		margin-bottom 1em

	.title-post
		font-family $displayFont
		font-weight 300
		line-height 1.5 * $baseLineHeight
		margin-bottom 0 // override baseline

	.meta-post
		font-size 0.8em
		font-style italic

		time, .labels-post
			font-style normal
			font-variant small-caps

	a:visited
		color accent_secondary_color

	img
		max-width 100%

	.iframe-video
		margin-bottom $baseLineHeight
		max-width 100% !important

	figure
		text-align center

		a[href$='jpg'], a[href$='jpeg'], a[href$='png']
			border-bottom 0
			cursor -webkit-zoom-in
			cursor -moz-zoom-in
			cursor zoom-in

	figcaption
		font-size 0.8em
		font-style italic

		em
			font-style normal

	hr
		border 0
		margin-bottom $baseLineHeight

		&:after
			color subtle_primary_color
			content '* * *'
			display block
			text-align center

	blockquote
		border-left 0.5em solid subtle_secondary_color
		margin 0
		padding-left 1em

	ol
		list-style-position inside
		padding-left 0

	code
		font-family $monospaceFont
		font-size 0.8em

	pre code
		border-left 0.5em solid subtle_secondary_color
		display block
		line-height 1.2
		padding-left 2em

// ====================================================================
// Comments
// ====================================================================

.comments
	min-height 100px

	&:before
		color subtle_primary_color
		content '↯'
		display block
		margin-bottom $baseLineHeight
		text-align center